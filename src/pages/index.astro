<style>
  header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding-block: 0px 16px;
  }

  .hero-title {
    font-family: var(--primary-font);
    font-size: 3.5em;
    font-weight: 700;
    margin-block: 0px;
    padding-block: 0px;
    text-align: center;
    color: var(--color-secundary);
  }

  .product-title {
    font-family: var(--primary-font);
    font-size: 3.5em;
    font-weight: 700;
    text-align: center;
    color: var(--color-primary);
    text-shadow: 0px 2px 4px var(--color-secundary);
  }

  span {
    color: var(--color-primary);
  }

  .hero-subtitle {
    font-family: var(--primary-font);
    font-size: 1.5em;
    font-weight: 500;
    margin-block: 0px;
    padding-block: 0px;
  }

  .buttom {
    width: 420px;
    height: auto;
    background-color: skyblue;
    font-size: 1.5em;
    font-weight: bold;
    display: flex;
    justify-content: center;
  }

  .image-reflection {
    position: relative;
    display: inline-block;
  }

  .image-reflection img {
    display: block;
  }

  .image-reflection::after {
    content: "";
    position: absolute;
    top: 100%; /* Coloca el reflejo debajo de la imagen */
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/src/assets/images/logo-drop.png"); /* La misma imagen */
    background-size: cover;
    background-position: center;
    transform: scaleY(-1); /* Voltea verticalmente */
    opacity: 0.2; /* Ajusta la opacidad del reflejo */
    filter: blur(2px); /* Aplica un ligero desenfoque */
  }

  .products-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: stretch;
    gap: 32px;
  }

  footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-block: 32px 16px;
  }

  .rrss {
    display: flex;
		flex-wrap: wrap;
    justify-content: center;
    align-items: center;
		text-align: center;
    gap: 24px;
    font-size: 1.5em;
  }
</style>
